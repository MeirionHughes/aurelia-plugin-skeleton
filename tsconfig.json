{
  "compilerOptions": {
     "experimentalDecorators": true, 
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "importHelpers": false,
    "noEmitHelpers": false,
    "typeRoots": [
      "node_modules/@types"
    ]    
  },
  "exclude": [
    "node_modules",
    "example",
    "dist"
  ]
}